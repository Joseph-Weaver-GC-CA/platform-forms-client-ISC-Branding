                    { value: 'step2_radio_infosec_key_yes', text:__('form.radio.yes')},
                    { value: 'step2_radio_infosec_key_no', text:__('form.radio.no')}
                ],
                data.step2_radio_infosec_key,
                __('ssc-tech-2.radio-5'),
                errors)
            }} 

            {{ textInput('step2_material', __('ssc-tech-2.questions.2')) }}
            {{ textInput('step3_docnum', __('ssc-tech-2.questions.3')) }}    

            {{ formSubmitButton('Continue') }}
