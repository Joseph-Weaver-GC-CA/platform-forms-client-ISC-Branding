                [],
                'Foreign',
                errors)
            }}                   
            {{ textInput('step2_country3', __('ssc-tech-2.questions.country')) }}      



            <h2 class="text-3xl my-5">{{ __('ssc-tech-2.subtitle-4') }}</h2>

            {{ protectedCheck("levelOfInfo") }}


            {{ radioButtons('step2_radio_comsec_key',
                [
                    { value: 'step2_radio_comsec_key_yes', text:__('form.radio.yes')},
                    { value: 'step2_radio_comsec_key_no', text:__('form.radio.no')}
                ],
                data.step2_radio_comsec_key,
                __('ssc-tech-2.radio-5'),
                errors)
            }} 

            <label>If Yes, indicate the level of sensitivity</label>
           {{ checkBoxes('checkbox_comsec_sensitivity',
                [
                    { value: '1', text:__('ssc-tech.protected.1')},
                    { value: '2', text:__('ssc-tech.protected.2')},
                    { value: '3', text:__('ssc-tech.protected.3')},
                    { value: '4', text:__('ssc-tech.classified.1')},
                    { value: '5', text:__('ssc-tech.classified.2')},
                    { value: '5', text:__('ssc-tech.classified.3')},
                    { value: '6', text:__('ssc-tech.classified.4')}
                ],
                [],
                __('ssc-tech.comsec'),
                errors)
            }}    

            {{ radioButtons('step2_radio_infosec_key',
